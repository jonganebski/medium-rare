section#settings__security.settings__security
  h2.settings__heading Security
  .settings__stack._flex-sb
    .settings__stack-content
      label.settings__stack-label Change password
      input.settings__stack-input(type="password", disabled)
      p.settings__stack-description Change your password. 
    .settings__stack-control
      button.settings__stack-green-btn Save
      button.settings__stack-gray-btn Cancel
      button.settings__stack-gray-btn Change
  .settings__stack._flex-sb
    .settings__stack-content
      label.settings__stack-label Delete account
      input.settings__stack-input(type="password")
      p.settings__stack-description Your account and all related information will be removed.
    .settings__stack-control
      button.settings__stack-red-btn Delete
      button.settings__stack-gray-btn Cancel
      button.settings__stack-gray-btn Delete