header#main-header.main-header._flex-cc
  .main-header__container._max-w-78._flex-cs
    a(href="/").main-header__spirit
        img(src="/image/steak.svg")
    a(href="/").main-header__title._flex-c-es
      h1 Medium
      h2 - rare
    if publishBtn .path
      h6.main-header__save-status Not saved
      if .story
        if .story.IsPublished
          button.main-header__unpublish-btn Unpublish
        else
          button.main-header__publish-btn Save and publish
      else
        button.main-header__publish-btn Save and publish
    if .userId
      a(href="/me/bookmarks")
        img(src="/image/bookmark.far.svg").main-header__bookmark-icon
      div._relative
        .main-header__avatar-frame._avatar-frame
          img.main-header__avatar-img._avatar-img(src="{{ .currentUser.AvatarURL }}")
        include views/partials/header.usermenu.pug
    else
      a.main-header__signin-anchor Sign In
      button.main-header__signup-btn Get Started
