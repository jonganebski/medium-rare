li.storyCard._flex
    .storyCard__content._flex-c-sb
        a(href="/read/{{ .StoryID }}")
          if (eq $.path "/")
            .storyCard__reference NOT BASED ON YOUR READING HISTORY
          h3.storyCard__header {{ .Header }}
          p.storyCard__body #{grindBody .Body 120}
        div
          a(href="user-home/{{ .AuthorID }}").storyCard__author-name._block {{ .AuthorUsername }} 
          .storyCard__info 
            span #{getStoryDate .CreatedAt}
            ._devider-dot
            span #{.ReadTime}
    a.storyCard__cover-frame(href="/read/{{ .StoryID }}")
        img.storyCard__cover-img(
          src="{{ .CoverImgURL }}"
        )